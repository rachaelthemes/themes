<!-- NOTE COUNT ABBREVIATION CODE © RHAEGARA -->

<script type="text/javascript">
(function($) {
    $.fn.noteCount = function() {
        this.each(function() {
            var originalNotes = $(this).text(),
                letter = "", finalNotes;
                var notes = parseInt(originalNotes);
                if (notes > 999 && notes < 10000) {
                    notes = notes / 100;
                    notes = Math.round(notes);
                    notes = notes / 10
                    letter = "K";
                }
                else if (notes > 999 && notes < 1000000) {
                    notes = notes / 1000;
                    notes = Math.round(notes);
                    letter = "K";
                }
                else if (notes >= 1000000){
                    notes = notes / 100000;
                    notes = Math.round(notes);
                    notes = Math.round(notes);
                    notes = notes / 10
                    letter = "M";
                }
                finalNotes = notes + letter;
            $(this).text(finalNotes);
        });
        return this;
    };
}(jQuery));
    $(document).ready(function() {
        $(".note-count").noteCount();
    });
</script>

{block:ifInfiniteScroll}<!-- INFINITE SCROLL -->
 
<script type="text/javascript">
$(document).ready(function(){
    var $container = $('.posts');
        $container.infinitescroll({
            behavior:'local',        
            itemSelector: '.post',
            navSelector: '#pagination',
            nextSelector: '#pagination a.next',
            loadingImg: '',
            loadingText: '<em></em>',          
            bufferPx: 1000
        },
        function( newElements ) {
            var $newElems = $( newElements );
            $newElems.find('.photo-slideshow').pxuPhotoset({
                lightbox: true,
                rounded: 'corners',
                gutter: '1px',
                borderRadius: '0px',
                photoset: '.photo-slideshow',
                photoWrap: '.photo-data',
                photo: '.pxu-photo'
            });      
            $newElems.unNest({
                yourCaption:".caption",
                newCaptionUsername:true,
                tumblrAvatars:true,
                usernameColon:false
            });
            $newElems.find('.note-count').noteCount();
        });        
});
</script>{/block:ifInfiniteScroll}

<script>
        $(window).scroll(function(){
        var headerHeight = {select:Header Height} - 20;
        if($('body').scrollTop() > headerHeight){
            $('#header').addClass('active');
        } else{
            $('#header').removeClass('active');
        }
    });
</script>


